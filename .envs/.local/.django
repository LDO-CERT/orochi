# Proxy
# ------------------------------------------------------------------------------
http_proxy=
https_proxy=
no_proxy=

# CSRF_TRUSTED_ORIGINS
# ------------------------------------------------------------------------------
CSRF_TRUSTED_ORIGINS=https://orochi.dev,https://localhost
